<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.script.mapper.ChatMapper">
    <insert id="addChat" parameterType="com.script.entity.Chat">
        insert into
        chat_extend(chat_id,
        date,
        content,
        user)
        VALUES (#{id},#{date},#{content},#{user.id})
    </insert>
    <delete id="delChatBeforeDate" parameterType="java.util.Date">
        DELETE FROM chat_extend
        WHERE <![CDATA[ "date" <= #{date} ]]>
    </delete>

</mapper>